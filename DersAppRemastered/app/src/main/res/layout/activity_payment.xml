<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme6color6"
    tools:context=".PaymentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/paymentBackButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/back"
                    android:backgroundTint="@color/white2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="DESTEK"
                    android:textAlignment="center"
                    android:textColor="@color/white2"
                    android:textSize="33dp" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white2"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aylık Paket"
                        android:textSize="31dp"
                        android:textColor="@color/blackandwhite"
                        android:textAlignment="center"/>

                    <View
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white2"/>

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bu paketi alarak\nreklamları\n1 ay\nsüre ile kaldırabilirsiniz."
                        android:textSize="25dp"
                        android:textColor="@color/blackandwhite"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_marginBottom="-5dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_montly"
                        android:textSize="27dp"
                        android:textColor="@color/blackandwhite"
                        android:textAlignment="center"/>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/payment_btnBuyMonthly"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Satın Al"
                        android:textSize="20dp"
                        android:background="@drawable/bg_btn"/>

                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/white2" />

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yıllık Paket"
                        android:textSize="31dp"
                        android:textColor="@color/blackandwhite"
                        android:textAlignment="center"/>
                    <View
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/white2"/>


                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bu paketi alarak\nreklamları\n1 yıl\nsüre ile kaldırabilirsiniz."
                        android:textSize="25dp"
                        android:textColor="@color/blackandwhite"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_marginBottom="-5dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_yearly"
                        android:textSize="27dp"
                        android:textColor="@color/blackandwhite"
                        android:textAlignment="center"/>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/payment_btnBuyYearly"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Satın Al"
                        android:textSize="20dp"
                        android:background="@drawable/bg_btn"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destek Paketi"
                    android:textSize="31dp"
                    android:textColor="@color/blackandwhite"
                    android:textAlignment="center"/>

                <View
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white2"/>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bu paketi alarak\ngeliştiriciye\ndestek olabilirsiniz."
                    android:textSize="25dp"
                    android:textColor="@color/blackandwhite"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_marginBottom="-5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_destek"
                    android:textSize="27dp"
                    android:textColor="@color/blackandwhite"
                    android:textAlignment="center"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/payment_btnBuyDestek"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destek Ol"
                    android:textSize="20dp"
                    android:background="@drawable/bg_btn"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reklam Desteği"
                    android:textSize="31dp"
                    android:textColor="@color/blackandwhite"
                    android:textAlignment="center"/>

                <View
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white2"/>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bir video izleyerek\nücretsiz bir şekilde geliştiriciye\ndestek olabilirsiniz."
                    android:textSize="25dp"
                    android:textColor="@color/blackandwhite"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_marginBottom="-5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30sn video"
                    android:textSize="27dp"
                    android:textColor="@color/blackandwhite"
                    android:textAlignment="center"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/payment_btnBuyWatch"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="İzle ve Destek Ol"
                    android:textSize="20dp"
                    android:background="@drawable/bg_btn"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/payment_reklamLoadingLayout"
        android:clickable="true"
        android:background="#A6000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reklam yükleniyor..."
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_above="@id/payment_destekProgressBar"/>

        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payment_destekProgressBar"/>

    </RelativeLayout>

</RelativeLayout>